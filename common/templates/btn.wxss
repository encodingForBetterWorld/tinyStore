/* common/templates/btn.wxss */
.btn-pay{
  display: flex;
  justify-content: space-between;
  align-items: center
}
.btn-pay > view{
  margin: 0 35rpx;
  padding: 5rpx
}
.btn-pay span{
  color: white;
  font-weight: bold
}
.btn-pay-price{
  font-size: 38rpx;
}
.btn-pay-price span:nth-of-type(1){
  opacity: 0.6;
  margin-right: 10rpx;
}
.btn-pay-text{
  font-size: 32rpx
}
.btn-footer{
  margin-bottom: 130rpx; 
}
.btn-1{
  display: flex;
  justify-content: center;
  align-items: center
}
.btn-1 span{
  color: #FFF;
}
.btn-2{
  display: flex;
  align-items: stretch;
  border-top: 3rpx solid #b1b1b1;
}
.btn-2 > view{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #FFF;
}
.btn-2 > view:nth-of-type(1){
  border-right: 5rpx solid #b1b1b1;
}